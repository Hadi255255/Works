<div class="col-md-4 offset-3 signupForm">
    <div class="container ">
        <h5 style="width: max-content;">Reset Password for <%= email %>
        </h5>
        <form action="" method="post" class="form_box">
            <div class="form-group form-group1">
                <label for="password">Password</label>
                <input type="password" name="password" placeholder="Enter you password" minlength="6"
                    class=" form-control p-1 mb-1 d-inline input1" required>
            </div>
            <div class="form-group form-group1">
                <label for="confirm_password">Confirm password</label>
                <input type="password" name="password2" placeholder="Re Enter you password" required minlength="6"
                    class="form-control p-1 mb-1 d-inline input1">
            </div>
            <input type="hidden" name="_csrf" value={{token}}>
            <input type="submit" id="submit" value="Reset password" class="btn btn-primary mt-4">
        </form>
    </div>
</div>
