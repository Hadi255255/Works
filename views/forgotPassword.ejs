<% if(messageInform!='' ){ %>
    <h6 class="text-bg-info inform text-center p-2 rounded-1 m-auto my-2 message"
        style="background-color: rgb(255, 245, 220);box-shadow: 4px 4px 4px 4px rgb(255, 255, 98);">
        <%= messageInform %>
    </h6>
    <% } %>
        <div class="col-md-4 offset-4 signupForm card border-secondary">
            <div class="card-body">
                <h2 class="card-title text-center">Reset your password</h2>
                <h6>If the account exists, we'll email you instructions to reset the password.</h6>
                <form action="" method="post">
                    <div class="form-group forgotDiv">
                        <label for="email">Email:</label>
                        <input type="email" name="email" id="email" placeholder="Enter your email here"
                            class="form-control">
                    </div> <br>
                    <input type="hidden" name="_csrf" value={{token}}>
                    <input type="submit" value="Submit" id="submit" class="btn btn-primary">
                </form>
                <br>
                <h5><a href="/signin">Return to sign in</a></h5>
            </div>
        </div>
